@model int

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Accedi</title>
    <link rel="stylesheet" type="text/css" href="/css/Login/StileAccesso.css" />
    <script src="~/js/Login/ControlliLogin.js"></script>
</head>
<body>

    <h1>LA FELTRINELLI</h1>
    <h3>Accedi al tuo account</h3>

    @if (Model > 0)
    {
        <div id="erroreLogin">
            <p>
                <b>USERNAME</b> O <b>PASSWORD</b> ERRATI. <br>Riprova
            </p>
        </div>
    }

    <div class="accedi">
       
        <form action="/Login/Valida" onsubmit="return controlla_login()" method="post">
            
            <table>
                <tr colspan="2">
                    LOGIN
                </tr>
                <tr>
                    <td>
                        USERNAME
                    </td>
                    <td>
                        <input type="text" id="nome" name="nome" placeholder="inserisci il nome" />
                    </td>
                </tr>
                <tr>
                    <td>
                        PASSWORD
                    </td>
                    <td>
                        <input type="password" id="pass" name="pass" placeholder="inserisci la password" />
                    </td>
                </tr>


            </table>
            <input type="submit" value="ACCEDI" id="accediBottone" />

            <div class="registrazioneLink">
                <p>
                    Non hai ancora l'account?
                    Registrati <a href="/Login/Registrazione">QUI</a> 
                </p>
            </div>

            <div class="recuperoPasswordLink">
                <p>
                    Hai dimenticato username o password?
                    Clicca <a href="/Login/RecuperoCredenziali">QUI</a>
                </p>
            </div>
        </form>
    </div>
</body>
</html>