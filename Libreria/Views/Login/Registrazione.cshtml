@using Libreria.Models;

@section Scripts {
    <script src="~/js/Login/ControlliLogin.js"></script>
}

@model Utente;

<section class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Crea il tuo nuovo profilo</h1>
        <form action="/Login/Salva" onsubmit="return controlli_registrazione()" method="POST">
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" id="nome" name="nome" placeholder="Inserisci il nome" />
            </div>
            <div class="form-group">
                <label for="pass">Password</label>
                <input type="password" id="password1" name="pass" placeholder="Inserisci la password" />
            </div>
            <div class="form-group">
                <label for="pass">Conferma password</label>
                <input type="password" id="password2" placeholder="Conferma la password" />
            </div>
            <div class="form-buttons justify-end">
                <button type="submit" class="btn-primary">Registrati</button>
            </div>
            <div class="form-links">
                <a href="/Login/Index">Hai già un account? Accedi</a>
            </div>
        </form>
    </div>
</section>